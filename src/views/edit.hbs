{{> header}}

<div class="container">
<div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/{{task._id}}" method="POST">
            <div class="form-group mb-3">
              <input type="text" name="title" placeholder="Insert a Title" class="form-control" value={{task.title}}>
            </div>
            <div class="form-group mb-3">
              <textarea name="description" cols="80" placeholder="Description" class="form-control">{{task.description}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update</button>
          </form>
        </div>
      </div>
</div>

</div>



